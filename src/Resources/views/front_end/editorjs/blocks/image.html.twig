{# @var \Mep\WebToolkitBundle\Entity\EditorJs\Block\Image block #}

{% set classes = ['image'] %}

{% if block.withBackground %}
    {% set classes = classes|merge['with-background'] %}
{% endif %}

{% if block.withBorder %}
    {% set classes = classes|merge['with-border'] %}
{% endif %}

{% if block.stretched %}
    {% set classes = classes|merge['stretched'] %}
{% endif %}

<figure class="{{ classes|join(' ') }}">
    <img
         src="{{ attachment_public_url(block.attachment) }}"
         alt="{{ block.caption }}">
    <figcaption>{{ block.caption }}</figcaption>
</figure>